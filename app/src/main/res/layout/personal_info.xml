<com.ksider.mobile.android.scrollListView.OverScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/personal_info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_personal_info"
            android:showDividers="middle"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/avator_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_avatar_background_height">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/personal_header"/>
            <ImageView
                    android:id="@+id/blurEffect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            <com.ksider.mobile.android.view.CircularImageView
                    android:id="@+id/avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="65dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    app:cover="true"
                    app:cover_width="2.5dp"
                    app:cover_color="@color/white_half_transparent"/>
            <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="33dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_middle_size"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>
                <ImageView
                        android:id="@+id/sex_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="@dimen/margin_standard"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="top|center_horizontal">
            <RelativeLayout
                    android:layout_width="99dp"
                    android:layout_height="32dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginTop="18dp">
                <TextView
                        android:id="@+id/personal_message"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:textSize="@dimen/personal_info_text_size_small"
                        android:textColor="@drawable/personal_info_text_color_grey_white"
                        android:drawablePadding="5dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="25dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/personal_info_message_drawable"
                        android:text="@string/info_personal_message"
                        android:background="@drawable/personal_info_bg_rectangle"/>
                <View
                        android:id="@+id/new_reply_tag"
                        android:visibility="invisible"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/personal_info_message_red_point"/>
            </RelativeLayout>
            <TextView
                    android:id="@+id/personal_storage"
                    android:layout_width="99dp"
                    android:layout_height="32dp"
                    android:textSize="@dimen/personal_info_text_size_small"
                    android:textColor="@drawable/personal_info_text_color_grey_white"
                    android:layout_marginTop="18dp"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="25dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/personal_info_storage_drawable"
                    android:text="@string/info_personal_storage"
                    android:background="@drawable/personal_info_bg_rectangle"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="4">
            <TextView
                    android:id="@+id/view_personal_consume_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@drawable/personal_info_text_color_grey_blue"
                    android:textSize="@dimen/personal_info_text_size_small"
                    android:drawableTop="@drawable/personal_info_code_drawable"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:text="@string/info_personal_code"/>
            <View
                    android:layout_height="40dp"
                    android:layout_width="0.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="top"
                    android:background="#ababab"/>
            <TextView
                    android:id="@+id/view_personal_unpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@drawable/personal_info_text_color_grey_blue"
                    android:textSize="@dimen/personal_info_text_size_small"
                    android:drawableTop="@drawable/personal_info_unpay_drawable"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:text="@string/info_personal_unpay"/>
            <View
                    android:layout_height="40dp"
                    android:layout_width="0.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="top"
                    android:background="#ababab"/>
            <TextView
                    android:id="@+id/view_personal_consumed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@drawable/personal_info_text_color_grey_blue"
                    android:textSize="@dimen/personal_info_text_size_small"
                    android:drawableTop="@drawable/personal_info_consumed_drawable"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:text="@string/info_personal_consumed"/>
            <View
                    android:layout_height="40dp"
                    android:layout_width="0.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="top"
                    android:background="#ababab"/>
            <TextView
                    android:id="@+id/view_personal_unconsume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@drawable/personal_info_text_color_grey_blue"
                    android:textSize="@dimen/personal_info_text_size_small"
                    android:drawableTop="@drawable/personal_info_unconsume_drawable"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:text="@string/info_personal_unconsume"/>
        </LinearLayout>
        <RelativeLayout
                android:id="@+id/personal_order"
                android:layout_width="match_parent"
                android:layout_height="49dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/personal_info_order_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/personal_info_text_color"
                    android:textSize="@dimen/personal_info_text_size_middle"
                    android:text="@string/info_personal_order"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/personal_info_more_icon"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/personal_coupon"
                android:layout_width="match_parent"
                android:layout_height="49dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/personal_info_coupon_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/personal_info_text_color"
                    android:textSize="@dimen/personal_info_text_size_middle"
                    android:text="@string/info_personal_coupon"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/personal_info_more_icon"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/personal_score"
                android:layout_width="match_parent"
                android:layout_height="49dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/personal_info_coupon_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/personal_info_text_color"
                    android:textSize="@dimen/personal_info_text_size_middle"
                    android:text="@string/info_personal_score"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/personal_info_more_icon"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/personal_setting"
                android:layout_width="match_parent"
                android:layout_height="49dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/personal_info_setting_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/personal_info_text_color"
                    android:textSize="@dimen/personal_info_text_size_middle"
                    android:text="@string/info_personal_setting"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/personal_info_more_icon"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
    </LinearLayout>
</com.ksider.mobile.android.scrollListView.OverScrollView>
