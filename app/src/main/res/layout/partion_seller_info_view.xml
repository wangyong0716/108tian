<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/partion_padding_bottom"
              android:orientation="vertical">
    <!--<include layout="@layout/title_view"/>-->
    <RelativeLayout
            android:id="@+id/to_date_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/partion_margin_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/partion_content_text_size"
                android:drawableLeft="@drawable/date_icon"
                android:drawablePadding="11dp"
                android:textColor="@color/content_color"
                android:text="日期："
                />
        <TextView
                android:id="@+id/date"
                android:layout_toRightOf="@id/time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:layout_marginLeft="11dp"
                />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/location_detail"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/to_merchant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/partion_margin_title"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/merchant_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/partion_content_text_size"
                    android:drawableLeft="@drawable/merchant_icon"
                    android:drawablePadding="11dp"
                    android:textColor="@color/content_color"
                    android:text="商家："
                    />
            <TextView
                    android:id="@+id/merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/partion_content_text_size"
                    android:textColor="@color/content_color"
                    android:layout_marginLeft="11dp"
                    />
        </LinearLayout>
        <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/location_detail"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/to_location_info"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/partion_margin_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/location_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:scaleType="centerCrop"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="#a0ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/location_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/partion_content_text_size"
                    android:drawableLeft="@drawable/location_icon_gray"
                    android:drawablePadding="5dp"
                    android:textColor="@color/label_color"
                    android:text="地址："
                    />
            <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/location_label"
                    android:gravity="center"
                    android:textSize="@dimen/partion_content_text_size"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:textColor="@color/label_color"
                    android:layout_marginLeft="5dp"
                    />
            <TextView
                    android:id="@id/distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:drawableRight="@drawable/location_detail"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/partion_content_text_size"
                    android:textColor="@color/label_color"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>