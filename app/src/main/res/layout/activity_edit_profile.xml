<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              tools:context="com.ksider.mobile.android.WebView.EditProfileActivity">
    <include layout="@layout/header_backtrack"/>
    <com.ksider.mobile.android.scrollListView.OverScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:divider="@drawable/divider_personal_info"
                android:showDividers="middle"
                android:dividerPadding="12dp">
            <RelativeLayout
                    android:id="@+id/avatar_layout"
                    android:layout_height="100dp"
                    android:layout_width="match_parent">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="头像"
                        android:drawableRight="@drawable/personal_info_more_icon"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/text_middle_size"/>
                <com.ksider.mobile.android.view.CircularImageView
                        android:id="@+id/edit_avatar"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar_1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="56dp"
                        app:graph_type="rectangle"
                        app:corner_radius_x="1.5dp"
                        app:corner_radius_y="1.5dp"
                        app:cover="true"
                        app:cover_width="2.5dp"
                        app:cover_color="@color/white_half_transparent"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginRight="20dp">
                <TextView
                        style="@style/edit_personal_info_item_text"
                        android:text="@string/edit_profile_nickname"
                        />
                <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/personal_info_text_color"
                        android:drawablePadding="@dimen/icon_margin"
                        android:drawableRight="@drawable/to_detail_icon"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/gender_layout"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginRight="20dp">
                <TextView
                        style="@style/edit_personal_info_item_text"
                        android:text="@string/edit_profile_gender"
                        />
                <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/personal_info_text_color"
                        android:drawablePadding="@dimen/icon_margin"
                        android:drawableRight="@drawable/to_detail_icon"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/age_layout"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginRight="20dp">
                <TextView
                        style="@style/edit_personal_info_item_text"
                        android:text="@string/edit_profile_sex"
                        />
                <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/personal_info_text_color"
                        android:drawablePadding="@dimen/icon_margin"
                        android:drawableRight="@drawable/to_detail_icon"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginRight="20dp">
                <TextView
                        style="@style/edit_personal_info_item_text"
                        android:text="@string/edit_profile_bing_phone"
                        />
                <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/personal_info_text_color"
                        android:drawablePadding="@dimen/icon_margin"
                        android:drawableRight="@drawable/to_detail_icon"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="0dp"/>
        </LinearLayout>
    </com.ksider.mobile.android.scrollListView.OverScrollView>
</LinearLayout>