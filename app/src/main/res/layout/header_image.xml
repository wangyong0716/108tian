<?xml version="1.0" encoding="utf-8"?>
<!-- 头图 -->
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_banner_image_height">
	<com.ksider.mobile.android.view.LoadImageView
    	android:id="@+id/header_image"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:scaleType="centerCrop"
    	android:src="@color/image_default_color" />
	<RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/header_banner_float_height"
       android:background="@drawable/image_mask"
       android:layout_gravity="bottom">
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_floating_margin_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_size"
            android:typeface="sans"
            tools:ignore="HardcodedText" />
	 </RelativeLayout>
</FrameLayout>
