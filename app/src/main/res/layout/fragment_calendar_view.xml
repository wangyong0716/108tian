<?xml version="1.0" encoding="utf-8"?>
<com.ksider.mobile.android.scrollListView.OverScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbarStyle="outsideOverlay">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.ksider.mobile.android.view.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                app:mcv_firstDayOfWeek="sunday"
                app:mcv_showOtherDates="true"
                app:mcv_selectionColor="#cdf6f2"
                app:mcv_border_lines="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>
        <View style="@style/divider_line"/>
        <TextView
                android:id="@+id/product_count"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="18sp"
                android:textColor="@color/label_color"
                android:gravity="center"/>
        <View style="@style/divider_line"/>
        <LinearLayout
                android:id="@+id/product_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:dividerPadding="15dp"
                android:showDividers="middle|end"
                android:divider="@drawable/divider">
        </LinearLayout>
    </LinearLayout>
</com.ksider.mobile.android.scrollListView.OverScrollView>