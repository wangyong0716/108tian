<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="0dp"
              android:orientation="vertical">
    <include layout="@layout/title_view"/>
    <RelativeLayout
            android:id="@+id/atlas_relative_layout_1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/partion_margin_title"
            android:layout_marginBottom="5dp"
            android:layout_height="@dimen/atlas_pic_height">
        <com.ksider.mobile.android.view.LoadImageView
                android:id="@+id/atlas_atlas_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/atlas_pic_height"
                android:scaleType="centerCrop"/>
        <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/content_color"
                android:textSize="@dimen/partion_content_text_size"
                android:background="@drawable/bg_atlas_rectangle_transparent"
                android:text="图集"/>
    </RelativeLayout>
    <!--<com.ksider.mobile.android.utils.AlignTextView-->
            <!--android:id="@+id/atlas_content_1"-->
            <!--android:visibility="invisible"-->
            <!--style="@style/align_text_view"/>-->
    <TextView
            android:id="@+id/atlas_content_1"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/content_color"
            android:textSize="@dimen/partion_content_text_size"
            android:lineSpacingExtra="@dimen/partion_content_spacing_extra"
            android:maxLines="5"
            android:ellipsize="end"/>
    <RelativeLayout
            android:id="@+id/atlas_relative_layout_2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="@dimen/atlas_pic_height">
        <com.ksider.mobile.android.view.LoadImageView
                android:id="@+id/atlas_atlas_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/atlas_pic_height"
                android:scaleType="centerCrop"/>
        <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/content_color"
                android:textSize="@dimen/partion_content_text_size"
                android:background="@drawable/bg_atlas_rectangle_transparent"
                android:text="图集"/>
    </RelativeLayout>
    <!--<com.ksider.mobile.android.utils.AlignTextView-->
            <!--android:id="@+id/atlas_content_2"-->
            <!--android:visibility="invisible"-->
            <!--style="@style/align_text_view"/>-->
    <TextView
            android:id="@+id/atlas_content_2"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/content_color"
            android:textSize="@dimen/partion_content_text_size"
            android:lineSpacingExtra="@dimen/partion_content_spacing_extra"
            android:maxLines="5"
            android:ellipsize="end"/>
    <!--<LinearLayout-->
    <!--android:id="@+id/atlas_container"-->
    <!--android:visibility="gone"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical"/>-->
</LinearLayout>