<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <com.ksider.mobile.android.view.LoadImageView
            android:id="@+id/listview_headImage"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:scaleType="centerCrop"
            android:src="@color/image_default_color"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_standard"
            android:layout_marginRight="@dimen/margin_right_standard"
            android:paddingTop="@dimen/list_item_top_margin"
            android:paddingBottom="@dimen/list_item_bottom_margin"
            android:orientation="vertical">
        <TextView
                android:id="@+id/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/label_color"
                android:textSize="17sp"
                android:singleLine="true"
                android:ellipsize="end"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_item_middle_margin">
            <TextView
                    android:id="@+id/listview_StartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/list_date_icon"
                    android:layout_centerVertical="true"
                    android:drawablePadding="7dp"
                    android:textColor="@color/content_color"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/listview_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:drawablePadding="7dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/listview_StartDate"
                    android:drawableLeft="@drawable/list_dot_icon"
                    android:textColor="@color/content_color"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/listview_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/list_collection_icon"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/listview_location"
                    android:textColor="@color/content_color"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/listview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/main_red"
                    android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>
