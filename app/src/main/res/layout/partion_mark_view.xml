<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/partion_margin_title"
        android:layout_gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:weightSum="3"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
    <TextView
            android:id="@+id/refund_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/partion_content_text_size"
            android:textColor="@color/content_color"
            android:drawableTop="@drawable/unrefund_icon"
            android:drawablePadding="7dp"
            android:text="不支持退款"
            />
    <View
            android:layout_height="15dp"
            android:layout_width="0.5dp"
            android:layout_gravity="bottom"
            android:background="#ababab"/>
    <TextView
            android:id="@+id/authentication_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/partion_content_text_size"
            android:textColor="@color/content_color"
            android:drawableTop="@drawable/authentication_icon"
            android:drawablePadding="7dp"
            android:text="认证商家"
            />
    <View
            android:layout_height="15dp"
            android:layout_width="0.5dp"
            android:layout_gravity="bottom"
            android:background="#ababab"/>
    <TextView
            android:id="@+id/consult_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/partion_content_text_size"
            android:textColor="@color/content_color"
            android:drawableTop="@drawable/consult_green_circle_icon"
            android:drawablePadding="7dp"
            android:text="联系客服"
            />
</LinearLayout>
