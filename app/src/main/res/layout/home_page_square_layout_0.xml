<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/subject_layout"
              android:layout_width="match_parent"
              android:layout_height="209dp"
              android:visibility="gone"
              android:orientation="vertical">
    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/homebackground"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:padding="10dp"
            android:weightSum="2"
            android:showDividers="middle"
            android:divider="@drawable/divider_recommend"
            android:orientation="vertical">
        <LinearLayout
                style="@style/homePageRecommendOuterLayoutStyle">
            <LinearLayout
                    android:id="@+id/subject_layout_1"
                    style="@style/homePageRecommendMiddleLayoutStyle">
                <TextView
                        android:id="@+id/subject_title_1"
                        style="@style/homePageRecommendTitleStyle"
                        android:textColor="@color/subject_title_default_color_1"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.ksider.mobile.android.view.LoadImageView
                            android:id="@+id/subject_img_1"
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_test_icon"/>
                    <ImageView
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_mask_icon"/>
                    <TextView
                            android:id="@+id/subject_subtitle_1"
                            style="@style/homePageRecommendDesStyle"
                            android:layout_toLeftOf="@id/subject_img_1"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/subject_layout_2"
                    style="@style/homePageRecommendMiddleLayoutStyle">
                <TextView
                        android:id="@+id/subject_title_2"
                        style="@style/homePageRecommendTitleStyle"
                        android:textColor="@color/subject_title_default_color_2"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.ksider.mobile.android.view.LoadImageView
                            android:id="@+id/subject_img_2"
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_test_icon"/>
                    <ImageView
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_mask_icon"/>
                    <TextView
                            android:id="@+id/subject_subtitle_2"
                            style="@style/homePageRecommendDesStyle"
                            android:layout_toLeftOf="@id/subject_img_2"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                style="@style/homePageRecommendOuterLayoutStyle">
            <LinearLayout
                    android:id="@+id/subject_layout_3"
                    style="@style/homePageRecommendMiddleLayoutStyle">
                <TextView
                        android:id="@+id/subject_title_3"
                        style="@style/homePageRecommendTitleStyle"
                        android:textColor="@color/subject_title_default_color_3"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.ksider.mobile.android.view.LoadImageView
                            android:id="@+id/subject_img_3"
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_test_icon"/>
                    <ImageView
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_mask_icon"/>
                    <TextView
                            android:id="@+id/subject_subtitle_3"
                            style="@style/homePageRecommendDesStyle"
                            android:layout_toLeftOf="@id/subject_img_3"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/subject_layout_4"
                    style="@style/homePageRecommendMiddleLayoutStyle">
                <TextView
                        android:id="@+id/subject_title_4"
                        style="@style/homePageRecommendTitleStyle"
                        android:textColor="@color/subject_title_default_color_4"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.ksider.mobile.android.view.LoadImageView
                            android:id="@+id/subject_img_4"
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_test_icon"/>
                    <ImageView
                            style="@style/homePageRecommendImageStyle"
                            android:src="@drawable/home_page_recommend_mask_icon"/>
                    <TextView
                            android:id="@+id/subject_subtitle_4"
                            style="@style/homePageRecommendDesStyle"
                            android:layout_toLeftOf="@id/subject_img_4"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>