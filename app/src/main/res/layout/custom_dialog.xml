<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:minWidth="300dp"
              android:layout_height="wrap_content"
              android:minHeight="108dp"
              android:background="@drawable/dialog_white_round_background"
              android:divider="@drawable/divider"
              android:showDividers="middle"
              android:orientation="vertical">
    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="修改昵称"/>
    <TextView
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="@string/get_photo_by_picture"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_middle_size"/>
    <TextView
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="@string/get_photo_by_picture"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_middle_size"/>
    <EditText
            android:id="@+id/input"
            android:background="@drawable/bg_edit_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/black_1"
            android:textColor="@color/black_0"
            android:textSize="@dimen/text_middle_size"
            android:hint="请输入新的昵称！"/>
    <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:showDividers="middle"
            android:paddingLeft="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="1dp"
            android:divider="@drawable/divider">
        <RelativeLayout
                android:id="@+id/negative_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/refund_cancel_button_background"
                android:layout_gravity="center"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/negative_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/title_color"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:typeface="sans"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/positive_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/refund_confirm_button_background"
                android:layout_gravity="center"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/positive_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/title_color"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:typeface="sans"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
