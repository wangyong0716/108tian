<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:minHeight="78dp"
        android:background="@color/white"
        android:divider="@drawable/divider_score"
        android:showDividers="end">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:divider="@drawable/divider_score"
            android:dividerPadding="16dp"
            android:weightSum="2"
            android:showDividers="middle">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/evaluate_score_textsize_middle"
                        android:text="--"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/evaluate_score_textsize_small"
                        android:text="分"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top|center_horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|center_horizontal"
                        android:textColor="@color/evaluation_score_black"
                        android:textSize="@dimen/evaluate_score_textsize_small"
                        android:text="我的积分"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/used_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/evaluation_score_gray"
                        android:textSize="@dimen/evaluate_score_textsize_middle"
                        android:text="--"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/evaluation_score_gray"
                        android:textSize="@dimen/evaluate_score_textsize_small"
                        android:text="分"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top|center_horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|center_horizontal"
                        android:textColor="@color/evaluation_score_gray"
                        android:textSize="@dimen/evaluate_score_textsize_small"
                        android:text="已用积分"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>