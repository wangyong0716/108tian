<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_merchant_product_rect">
        <com.ksider.mobile.android.view.LoadImageView
                android:id="@+id/head_img"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:scaleType="centerCrop"/>
        <LinearLayout
                android:layout_marginLeft="@dimen/margin_left_standard"
                android:layout_marginRight="@dimen/margin_right_standard"
                android:paddingTop="@dimen/list_item_top_margin"
                android:paddingBottom="@dimen/list_item_bottom_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:id="@+id/top_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:textColor="@color/label_color"
                        android:textSize="17sp"
                        android:typeface="sans"/>
                <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/content_color"
                        android:textSize="15sp"
                        android:typeface="sans"/>
                <!--<TextView-->
                        <!--android:layout_toLeftOf="@id/listview_location"-->
                        <!--android:id="@+id/price_symbol_cny"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:visibility="gone"-->
                        <!--android:layout_marginTop="3dp"-->
                        <!--android:layout_alignParentTop="true"-->
                        <!--android:text="@string/price_symbol_cny"-->
                        <!--android:textColor="@color/black_0"-->
                        <!--android:textSize="15sp"/>-->
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_item_middle_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/content_color"
                        android:drawableLeft="@drawable/date_icon"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:typeface="sans"/>

                <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/icon_margin"
                        android:textColor="@color/main_red"
                        android:textSize="18sp"
                        android:typeface="sans"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>