<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_outside_divider"
        android:showDividers="middle"
        android:orientation="vertical"
        android:background="@color/white">
    <include layout="@layout/header_backtrack"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feedback_icon_left_margin"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_middle_size"
                android:text="@string/feedback_tips"/>
        <LinearLayout
                android:id="@+id/phone_display"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/feedback_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_icon_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"
                    android:text="@string/feedback_mobile"/>
            <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_content_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/qq_display"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/feedback_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_icon_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"
                    android:text="@string/feedback_qq"/>
            <TextView
                    android:id="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_content_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/email_display"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/feedback_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_icon_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"
                    android:text="@string/feedback_email"/>
            <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_content_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/plain_display"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/feedback_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_icon_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"
                    android:text="@string/feedback_plain"/>
            <TextView
                    android:id="@+id/plain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feedback_content_left_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size"/>
        </LinearLayout>
    </LinearLayout>
    <com.ksider.mobile.android.scrollListView.OverScrollListView
            android:id="@+id/reply_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:listSelector="#00000000"
            android:divider="@null"
            android:transcriptMode="alwaysScroll"/>
    <LinearLayout
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/reminder"
                android:layout_height="match_parent"
                android:layout_width="50dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:textColor="@color/gray_1"/>
        <EditText
                android:id="@+id/edit_message"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_1"
                android:hint="@string/feedback_hint"/>
        <Button
                android:id="@+id/send_message_button"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/feedback_button_background"
                android:text="@string/feedback_send"/>
    </LinearLayout>
</LinearLayout>