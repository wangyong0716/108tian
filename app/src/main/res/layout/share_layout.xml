<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/share_mask"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#40000000"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center">
        <View
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/title_line_background_left"/>
        <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_main_color"/>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:gravity="center"
                android:textColor="@color/label_color"
                android:textSize="@dimen/partion_label_text_size"
                android:text="分享到"/>

        <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_main_color"/>
        <View
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/title_line_background_right"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:weightSum="4"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/share_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_wechat_icon"
                android:drawablePadding="5dp"
                android:text="微信"
                />
        <TextView
                android:id="@+id/share_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_friends_icon"
                android:drawablePadding="5dp"
                android:text="朋友圈"
                />
        <TextView
                android:id="@+id/share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_weibo_icon"
                android:drawablePadding="5dp"
                android:text="微博"
                />
        <TextView
                android:id="@+id/share_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_qq_icon"
                android:drawablePadding="5dp"
                android:text="QQ"
                />
    </LinearLayout>
</LinearLayout>



