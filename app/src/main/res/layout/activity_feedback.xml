<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homebackground"
        android:orientation="vertical">
    <include layout="@layout/header_backtrack_info"/>
    <com.ksider.mobile.android.scrollListView.OverScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:drawablePadding="9dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="14dp"
                    android:background="@color/homebackground"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/home_section_tile"
                    android:text="问题意见"/>
            <EditText
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textColorHint="@color/content_color"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_section_tile"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:gravity="left|top"
                    android:background="@color/white"
                    android:hint="请见要描述您的问题和意见～"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:drawablePadding="9dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:background="@color/homebackground"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/home_section_tile"
                    android:text="联系电话(必填)"/>
            <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColorHint="@color/content_color"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:textSize="@dimen/home_section_tile"
                    android:paddingLeft="16dp"
                    android:inputType="phone"
                    android:gravity="left|center_vertical"
                    android:hint="请输入您的电话号码～"/>
            <Button
                    android:id="@+id/submit"
                    android:layout_marginTop="90dp"
                    android:layout_height="50dp"
                    android:layout_width="336dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/login_button_frame"
                    android:text="提交"/>
        </LinearLayout>
    </com.ksider.mobile.android.scrollListView.OverScrollView>
</LinearLayout>
