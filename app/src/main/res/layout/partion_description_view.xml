              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/partion_padding_bottom_small"
              android:orientation="vertical">
    <include layout="@layout/title_view"/>
    <!--<com.ksider.mobile.android.utils.AlignTextView-->
            <!--android:id="@+id/part_content"-->
            <!--style="@style/align_text_view"/>-->
    <TextView
            android:id="@+id/part_content"
            android:layout_marginTop="@dimen/partion_margin_title"
