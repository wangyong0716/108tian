<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/username"
                android:layout_height="30dp"
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:gravity="top"
                android:textSize="@dimen/text_large_size"
                android:textColor="@color/main_color"/>
        <TextView
                android:id="@+id/reply_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/username"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/umeng_fb_item_content_size"/>

        <TextView
                android:id="@+id/reply_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reply_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/umeng_fb_secondary_text_light"
                android:textSize="@dimen/umeng_fb_item_time_size"/>

        <ImageView
                android:id="@+id/umeng_fb_resend"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/reply_date"
                android:layout_below="@+id/reply_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/reply_date"
                android:layout_toRightOf="@+id/reply_date"
                android:contentDescription="@string/umeng_fb_send"
                android:visibility="visible"/>
    </RelativeLayout>
    <View
            android:id="@+id/umeng_fb_reply_item_view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/umeng_fb_item_line_height"
            android:layout_below="@+id/reply_date"
            android:background="@color/umeng_fb_line"/>
</LinearLayout>
