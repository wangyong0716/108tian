<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <RelativeLayout android:id="@+id/header_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header_banner_height"
                    android:background="@color/toolbar_background_color">
        <TextView
                android:id="@+id/list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/toolbar_text_color"
                android:textSize="@dimen/text_large_size"
                android:typeface="sans"/>
        <ImageView
                android:id="@+id/filter_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:src="@drawable/filter_icon"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/filter_icon"
                android:layout_alignBottom="@id/filter_icon"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:src="@drawable/filter_triangle_icon"/>
    </RelativeLayout>
    <View style="@style/divider_line"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <com.ksider.mobile.android.view.viewpagerindicator.TabPageIndicator
                android:id="@+id/indicator"
                android:layout_height="@dimen/indicator_height"
                android:layout_width="match_parent"/>
        <View style="@style/divider_line"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <com.ksider.mobile.android.scrollListView.OverScrollPullToRefreshListView
                    android:id="@+id/error_mask"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:headerDividersEnabled="false"
                    android:footerDividersEnabled="false"
                    android:background="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>