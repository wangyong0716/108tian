<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/subject_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:orientation="vertical">
    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/homebackground"/>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:divider="@drawable/divider_square"
            android:showDividers="middle"
            android:minHeight="174dp">
        <RelativeLayout
                android:id="@+id/subject_layout_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/subject_title_1"
                    style="@style/homePageRecommendTitleStyle"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/subject_title_default_color_1"/>
            <TextView
                    android:id="@+id/subject_subtitle_1"
                    android:layout_marginLeft="22dp"
                    android:layout_below="@+id/subject_title_1"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    style="@style/homePageRecommendDesStyle"/>
            <com.ksider.mobile.android.view.CircularImageView
                    android:id="@+id/subject_img_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"
                    app:cover="true"
                    app:cover_width="45dp"
                    app:cover_color="#4cfb695c"
                    app:dashed="true"
                    app:dash_distance="3dp"
                    app:dash_color="@color/white"
                    app:dash_width="1dp"
                    app:dash_line_length="15"
                    app:dash_blank_length="10"/>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:divider="@drawable/divider_square"
                android:showDividers="middle"
                android:orientation="vertical">
            <RelativeLayout
                    android:id="@+id/subject_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/subject_title_2"
                        style="@style/homePageRecommendTitleStyle"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="9dp"
                        android:textColor="@color/subject_title_default_color_2"/>
                <TextView
                        android:layout_below="@id/subject_title_2"
                        android:id="@+id/subject_subtitle_2"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        style="@style/homePageRecommendDesStyle"/>
                <com.ksider.mobile.android.view.CircularImageView
                        android:id="@+id/subject_img_2"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30.6dp"
                        app:cover="true"
                        app:cover_width="25.5dp"
                        app:cover_color="#4c8ed740"
                        app:dashed="true"
                        app:dash_distance="1.5dp"
                        app:dash_color="@color/white"
                        app:dash_width="0.5dp"
                        app:dash_line_length="6"
                        app:dash_blank_length="4"/>
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/divider_square"
                    android:showDividers="middle"
                    android:weightSum="2"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:id="@+id/subject_layout_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/subject_title_3"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="9dp"
                            style="@style/homePageRecommendTitleStyle"
                            android:textColor="@color/subject_title_default_color_3"/>
                    <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="9dp"
                            android:layout_below="@id/subject_title_3"
                            android:id="@+id/subject_subtitle_3"
                            android:singleLine="true"
                            android:ellipsize="end"
                            style="@style/homePageRecommendDesStyle"/>
                    <com.ksider.mobile.android.view.CircularImageView
                            android:id="@+id/subject_img_3"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            app:cover="true"
                            app:cover_width="27dp"
                            app:cover_color="#4c4ea9ff"
                            app:dashed="true"
                            app:dash_distance="1.5dp"
                            app:dash_color="@color/white"
                            app:dash_width="0.5dp"
                            app:dash_line_length="6"
                            app:dash_blank_length="4"/>
                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/subject_layout_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/subject_title_4"
                            style="@style/homePageRecommendTitleStyle"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="9dp"
                            android:textColor="@color/subject_title_default_color_4"/>
                    <TextView
                            android:id="@+id/subject_subtitle_4"
                            android:layout_below="@id/subject_title_4"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="9dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            style="@style/homePageRecommendDesStyle"/>
                    <com.ksider.mobile.android.view.CircularImageView
                            android:id="@+id/subject_img_4"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            app:cover="true"
                            app:cover_width="27dp"
                            app:cover_color="#4cffba4b"
                            app:dashed="true"
                            app:dash_distance="1.5dp"
                            app:dash_color="@color/white"
                            app:dash_width="0.5dp"
                            app:dash_line_length="6"
                            app:dash_blank_length="4"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>