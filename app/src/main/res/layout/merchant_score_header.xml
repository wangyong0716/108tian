<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="78dp"
        android:background="@color/white"
        android:divider="@drawable/divider_blank"
        android:showDividers="middle|end">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:minHeight="90dp"
            android:divider="@drawable/divider_score"
            android:dividerPadding="20dp"
            android:weightSum="2"
            android:showDividers="middle">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                android:paddingLeft="50dp"
                android:gravity="center">
            <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/evaluation_score_red"
                    android:textSize="34sp"
                    android:text="--"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/evaluation_score_gray"
                    android:textSize="15sp"
                    android:text="评分"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                android:paddingRight="50dp"
                android:gravity="center">
            <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/evaluation_score_gray"
                    android:textSize="34sp"
                    android:text="--"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/evaluation_score_gray"
                    android:textSize="15sp"
                    android:text="点评"/>
        </LinearLayout>
    </LinearLayout>
    <com.ksider.mobile.android.view.evaluation.AutoLayout
            android:id="@+id/evaluation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:row_max="3"
            app:max_row="3"
            app:divider_width="11dp"
            app:divider_height="11dp"
            android:orientation="vertical"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="评价详情"
            android:textColor="@color/evaluation_score_black"
            android:textSize="@dimen/evaluate_score_textsize_small"/>
</LinearLayout>