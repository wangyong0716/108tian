<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/listview_img_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_img_height">
        <com.ksider.mobile.android.view.LoadImageView
                android:id="@+id/listview_headImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_img_height"
                android:scaleType="centerCrop"/>
        <TextView
                android:id="@+id/card_title"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="65dp"
                android:layout_height="41dp"
                android:background="#7f000000"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_left_standard"
            android:layout_marginRight="@dimen/margin_right_standard"
            android:paddingTop="15dp"
            android:paddingBottom="25dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/label_color"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/date_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_centerVertical="true"
                    android:gravity="center">
                <TextView
                        android:id="@+id/listview_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/list_date_icon"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/content_color"
                        android:layout_marginRight="7dp"
                        android:drawableRight="@drawable/list_dot_icon"/>
                <ImageView
                        android:id="@+id/distance_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/location_icon_gray"/>
                <TextView
                        android:id="@+id/listview_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/content_color"
                        android:textSize="15sp"/>
                <ImageView
                        android:id="@+id/loc_dis_icon"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/list_dot_icon"/>
                <TextView
                        android:id="@+id/listview_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/content_color"
                        android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/listview_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/list_collection_icon"
                    android:textColor="@color/content_color"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/date_distance"
                    android:drawablePadding="5dp"
                    android:textSize="15sp"
                    android:gravity="center"/>
            <TextView
                    android:id="@+id/listview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:textColor="@color/main_red"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>