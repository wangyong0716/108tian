<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
    <include layout="@layout/header_backtrack"/>
    <com.ksider.mobile.android.scrollListView.OverScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coupon_scroll_view"
            android:scrollbarStyle="outsideOverlay"
            tools:context="com.ksider.mobile.android.personal.ChooseCouponActivity">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/coupon_use_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="22dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_small_size"
                    android:textColor="@color/main_color"
                    android:text="@string/coupon_use_rule"/>
            <LinearLayout
                    android:id="@+id/coupon_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:divider="@drawable/coupon_divider"
                    android:showDividers="middle"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_left_standard"
                    android:paddingRight="@dimen/margin_right_standard">
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/empty_list_item"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="116dp">
                <ImageView
                        android:src="@drawable/coupon_icon"
                        android:visibility="visible"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/no_coupon_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black_1"
                        android:text="@string/coupon_info_no_use"/>
            </LinearLayout>
            <include layout="@layout/init_loading_view"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="140dp"/>
        </LinearLayout>
    </com.ksider.mobile.android.scrollListView.OverScrollView>
</LinearLayout>