<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
    <include layout="@layout/header_backtrack_info"/>
    <com.ksider.mobile.android.scrollListView.OverScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/header_banner_height"
            android:paddingBottom="50dp"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                        android:id="@+id/consume_code_detail"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:orientation="horizontal">
                    <com.ksider.mobile.android.view.LoadImageView
                            android:id="@+id/listview_headImage"
                            android:layout_height="90dp"
                            android:layout_width="135dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="11dp"
                            android:scaleType="centerCrop"
                            />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:gravity="left">
                        <TextView
                                android:id="@+id/consumeTitle"
                                android:layout_width="match_parent"
                                android:textColor="@color/label_color"
                                android:textSize="@dimen/text_small_size"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="12dp"
                                android:layout_marginRight="@dimen/margin_standard"
                                android:drawableRight="@drawable/personal_info_more_icon"/>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="11dp">
                            <TextView
                                    android:id="@+id/moneyRMB_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:textColor="@color/main_color"
                                    android:textSize="@dimen/text_small_size"
                                    android:paddingBottom="1dp"
                                    android:text="@string/price_symbol_cny"/>
                            <TextView
                                    android:id="@+id/price"
                                    android:layout_toRightOf="@id/moneyRMB_icon"
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/text_large_size"
                                    android:textColor="@color/main_color"/>
                            <TextView
                                    android:id="@+id/refundAble"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="20dp"
                                    android:textColor="@color/personal_info_text_color"
                                    android:textSize="@dimen/text_tiny_size"/>
                            <ImageView
                                    android:id="@+id/refund_icon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/unrefund_icon"
                                    android:layout_toLeftOf="@id/refundAble"
                                    android:layout_alignTop="@id/refundAble"
                                    android:layout_alignParentBottom="true"
                                    android:scaleType="fitCenter"
                                    android:layout_marginRight="5dp"
                                    />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp">
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layerType="software"
                            android:background="@drawable/order_detail_dash_line"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/code_list_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:orientation="vertical">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:paddingBottom="10dp"
                                  android:orientation="horizontal">
                        <TextView
                                android:text="@string/see_consume_code"
                                style="@style/order_detail_label"
                                android:layout_height="32dp"
                                android:gravity="left|center_vertical"
                                android:paddingBottom="0dp"/>
                        <LinearLayout
                                android:id="@+id/code_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="43dp"
                                android:layout_marginRight="16dp"
                                android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_left_standard"
                            android:layout_marginRight="@dimen/margin_right_standard"
                            android:background="@color/divider_personal_info"
                            android:layout_gravity="bottom"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/code_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_personal_info"
                    android:dividerPadding="12dp"
                    android:showDividers="middle"
                    android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/order_product_name"/>
                    <TextView
                            android:id="@+id/productName"
                            android:ems="14"
                            style="@style/order_detail_value"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/order_serial_number"/>
                    <TextView
                            android:id="@+id/serial_number"
                            style="@style/order_detail_value"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/buy_product_use_date"/>
                    <TextView
                            android:id="@+id/consume_date"
                            style="@style/order_detail_value"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/buy_product_use_time"/>
                    <TextView
                            android:id="@+id/consume_time"
                            style="@style/order_detail_value"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/buy_num_lab"/>
                    <TextView
                            android:id="@+id/sellCount"
                            style="@style/order_detail_value"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/buy_total_price_lab"/>
                    <TextView
                            android:id="@+id/total_fee"
                            style="@style/order_detail_value"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/order_payment_discount_amount"/>
                    <TextView
                            android:id="@+id/coupon_worth"
                            android:textColor="@color/order_detail_coupon_text_color"
                            style="@style/order_detail_value"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/order_detail_label"
                            android:text="@string/order_payment_amount"/>
                    <TextView
                            android:id="@+id/to_pay"
                            style="@style/order_detail_value"
                            android:textColor="@color/main_color"/>
                </RelativeLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.ksider.mobile.android.scrollListView.OverScrollView>
    <TextView
            android:id="@+id/pay_or_rebuy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:background="@color/red"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_large_size"/>
</RelativeLayout>