<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal">
    <LinearLayout
            android:id="@+id/theme_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:background="@drawable/personal__storage_list_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">
        <TextView
                android:id="@+id/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@drawable/selector_text_color_grey_blue"
                android:textSize="15sp"
                android:duplicateParentState="true"
                android:text="@string/selector_theme"/>
        <ImageView
                android:id="@+id/theme_status_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:duplicateParentState="true"
                android:src="@drawable/selector_icon_single_drawable"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/location_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:background="@drawable/personal__storage_list_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">
        <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@drawable/selector_text_color_grey_blue"
                android:textSize="15sp"
                android:duplicateParentState="true"
                android:text="@string/selector_location"/>
        <ImageView
                android:id="@+id/location_status_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:duplicateParentState="true"
                android:src="@drawable/selector_icon_single_drawable"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:background="@drawable/personal__storage_list_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">
        <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@drawable/selector_text_color_grey_blue"
                android:textSize="15sp"
                android:duplicateParentState="true"
                android:text="@string/selector_default_sort"/>
        <ImageView
                android:id="@+id/price_status_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:duplicateParentState="true"
                android:src="@drawable/selector_icon_single_drawable"/>
    </LinearLayout>
</LinearLayout>