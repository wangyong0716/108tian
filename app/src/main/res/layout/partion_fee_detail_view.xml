<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/partion_padding_bottom"
              android:orientation="vertical">
    <include layout="@layout/title_view"/>
    <TextView
            android:id="@+id/part_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/partion_margin_title"
            android:textColor="@color/content_color"
            android:textSize="@dimen/partion_content_text_size"
            android:lineSpacingExtra="@dimen/partion_content_spacing_extra"
            android:maxLines="4"/>
    <TextView
            android:id="@+id/more"
            android:layout_width="@dimen/more_frame_width"
            android:layout_height="@dimen/more_frame_height"
            android:textColor="@color/main_color"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="@dimen/partion_more_text_size"
            android:layout_marginTop="@dimen/partion_margin_content"
            android:background="@drawable/bg_cornered_rectangle_more"/>
</LinearLayout>