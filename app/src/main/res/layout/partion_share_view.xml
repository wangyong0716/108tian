<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/partion_padding_bottom"
              android:orientation="vertical">
    <include
            android:id="@+id/share_title_layout"
            layout="@layout/title_view"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/partion_margin_title"
            android:layout_gravity="center_vertical"
            android:weightSum="4"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_wechat_icon"
                android:drawablePadding="5dp"
                android:text="微信"
                />
        <TextView
                android:id="@+id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_friends_icon"
                android:drawablePadding="5dp"
                android:text="朋友圈"
                />
        <TextView
                android:id="@+id/weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_weibo_icon"
                android:drawablePadding="5dp"
                android:text="微博"
                />
        <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/partion_content_text_size"
                android:textColor="@color/content_color"
                android:drawableTop="@drawable/share_qq_icon"
                android:drawablePadding="5dp"
                android:text="QQ"
                />
    </LinearLayout>
</LinearLayout>