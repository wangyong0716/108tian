<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <com.ksider.mobile.android.view.LoadImageView
            android:id="@+id/listview_headImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_img_height"
            android:scaleType="centerCrop"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_left_standard"
            android:layout_marginRight="@dimen/margin_right_standard"
            android:paddingTop="@dimen/list_item_top_margin"
            android:paddingBottom="@dimen/list_item_bottom_margin"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/title_color"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_item_middle_margin"
                android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/date_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_centerVertical="true"
                    android:gravity="center">
                <TextView
                        android:id="@+id/listview_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/list_date_icon"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/content_color"
                        android:layout_marginRight="7dp"
                        android:drawableRight="@drawable/list_dot_icon"/>
                <ImageView
                        android:id="@+id/distance_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/location_icon_gray_large"/>
                <TextView
                        android:id="@+id/listview_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/content_color"
                        android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/listview_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/list_collection_icon"
                    android:textColor="@color/content_color"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/date_distance"
                    android:textSize="15sp"
                    android:gravity="center"/>
            <TextView
                    android:id="@+id/listview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/main_red"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>