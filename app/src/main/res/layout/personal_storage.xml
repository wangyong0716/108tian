<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/homebackground"
              tools:context="com.ksider.mobile.android.WebView.StorageListActivity">
    <include layout="@layout/header_backtrack"/>
    <com.ksider.mobile.android.scrollListView.OverScrollPullToRefreshListView
            android:id="@+id/content_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/homebackground"
            android:clipToPadding="false"
            android:divider="@color/homebackground"
           />
    <LinearLayout
            android:id="@+id/empty_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="116dp">
        <ImageView
                android:src="@drawable/loading_icon"
                android:visibility="visible"
                android:layout_gravity="center|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/no_storage_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_1"
                android:text="@string/storage_info_none1"/>
        <TextView
                android:id="@+id/no_storage_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_1"
                android:text="@string/storage_info_none2"/>
    </LinearLayout>
    <include  layout="@layout/init_loading_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="140dp"/>
</LinearLayout>