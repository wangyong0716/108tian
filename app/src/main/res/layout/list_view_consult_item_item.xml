<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <com.ksider.mobile.android.view.CircularImageView
                android:id="@+id/avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                app:border="false"
                app:border_color="@color/white_half_transparent"
                app:border_width="2dp"
                app:shadow_color="@color/white_half_transparent"
                app:shadow="false"/>
        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black_0"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/consult_default_font_size"/>
        <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="right|center_vertical"
                android:textSize="10sp"
                android:textColor="@color/black_4"/>
    </LinearLayout>
    <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textSize="@dimen/consult_small_font_size"
            android:textColor="@color/black_5"/>
</LinearLayout>