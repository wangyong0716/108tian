<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              tools:context="com.ksider.mobile.android.personal.ConsumeCodeListActivity">
    <include layout="@layout/header_backtrack"/>
    <com.ksider.mobile.android.scrollListView.OverScrollPagingListView
            android:id="@+id/content_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:headerDividersEnabled="true"
            android:paddingTop="9dp"
            android:clipToPadding="false"
            android:layout_marginLeft="@dimen/margin_left_standard"
            android:layout_marginRight="@dimen/margin_right_standard"
            android:scrollbars="none"
            android:dividerHeight="19dp"/>
    <LinearLayout
            android:id="@+id/empty_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="116dp">
        <ImageView
                android:src="@drawable/loading_icon"
                android:visibility="visible"
                android:layout_gravity="center|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/no_consume_code_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_1"
                android:text="@string/code_info_none"/>
    </LinearLayout>
    <!--<include  layout="@layout/init_loading_view"-->
              <!--android:layout_width="wrap_content"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:layout_centerHorizontal="true"-->
              <!--android:layout_marginTop="140dp"/>-->
</LinearLayout>