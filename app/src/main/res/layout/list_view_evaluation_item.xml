<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/consult_question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <com.ksider.mobile.android.view.CircularImageView
            android:id="@+id/avatar"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            app:border="false"
            app:border_color="@color/white_half_transparent"
            app:border_width="2dp"
            app:shadow_color="@color/white_half_transparent"
            app:shadow="false"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:divider="@drawable/divider_score"
            android:showDividers="beginning"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                android:gravity="left|center_vertical">
            <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/evaluation_score_black"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/evaluate_score_textsize_small"/>
            <RatingBar
                    android:id="@+id/score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    style="@style/smallRatingBar"/>
        </LinearLayout>
        <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_tiny_size"
                android:textColor="@color/evaluation_score_gray"
                android:text=""/>
        <com.ksider.mobile.android.view.evaluation.SimpleAutoLayout
                android:id="@+id/evaluation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:max_row="3"
                app:row_max="3"
                app:item_height="@dimen/evaluation_item_height"
                android:orientation="vertical"/>
    </LinearLayout>
</LinearLayout>