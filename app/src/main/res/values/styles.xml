<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
           xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="guide_icon_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_0</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="guide_icon_button">
        <item name="android:layout_width">@dimen/guide_circle_diameter</item>
        <item name="android:layout_height">@dimen/guide_circle_diameter</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/black_1</item>
    </style>
    <style name="detail_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/detail_title_height</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/detail_title_color</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="card_container_style">
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">@dimen/margin_left_standard</item>
        <item name="android:paddingRight">@dimen/margin_right_standard</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="order_module_base_background">
        <!--<item name="android:background">@drawable/bg_cornered_purchase_background</item>-->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="order_module_background" parent="order_module_base_background">
        <item name="android:showDividers">middle</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:divider">@drawable/divider</item>
    </style>

    <style name="detail_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/detail_title_color</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
        <item name="android:drawablePadding">@dimen/icon_margin</item>
    </style>
    <style name="detail_mutiline_item_style" parent="@style/detail_item_style">
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:paddingTop">@dimen/margin_top_standard</item>
        <item name="android:paddingBottom">@dimen/margin_bottom_standard</item>
    </style>

    <style name="activity_detail_item_style" parent="@style/detail_item_style">

    </style>
    <style name="search_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|top</item>
    </style>
    <style name="StyledIndicators" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    <style name="StyledIndicatorsTransparentTheme" parent="@style/TransparentTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Custom.TextAppearance.TabPageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Crop"></style>

    <style name="Crop.DoneCancelBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/crop__bar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/crop__divider</item>
        <item name="android:showDividers" tools:ignore="NewApi">middle</item>
        <item name="android:dividerPadding" tools:ignore="NewApi">12dp</item>
        <item name="android:background">@color/crop__button_bar</item>
    </style>

    <style name="Crop.ActionButtonCancel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/crop__selectable_cancel_background</item>
    </style>

    <style name="Crop.ActionButtonDone">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/crop__selectable_done_background</item>
    </style>

    <style name="Crop.ActionButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">20dp</item>
        <!-- Offsets left drawable -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/crop__button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Crop.ActionButtonText.Done">
        <item name="android:drawableLeft">@drawable/crop__ic_done</item>
        <item name="android:text">@string/crop__done</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Crop.ActionButtonText.Cancel">
        <item name="android:drawableLeft">@drawable/crop__ic_cancel</item>
        <item name="android:text">@string/crop__cancel</item>
        <item name="android:textColor">@drawable/crop__textview_cancel_selector</item>
    </style>
    <style name="TextAppearance.MaterialCalendarWidget.Header" parent="android:TextAppearance.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_0</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Date" parent="android:TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="android:TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="personalList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">@dimen/personal_storage_height</item>
        <item name="android:background">@drawable/personal__storage_list_background</item>
    </style>
    <style name="paddingPersonalList" parent="personalList">
        <item name="android:paddingLeft">@dimen/detail_entry_icon_margin</item>
        <item name="android:paddingRight">@dimen/detail_entry_icon_margin</item>
    </style>

    <style name="edit_personal_info_item_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="divider_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/detail_entry_icon_margin</item>
        <item name="android:layout_marginRight">@dimen/detail_entry_icon_margin</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="refundDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="couponDialogStyle" parent="refundDialogStyle">
        <item name="android:windowAnimationStyle">@style/scaleDialogAnimation</item>
    </style>
    <style name="scaleDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="selectDialogStyle" parent="refundDialogStyle">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="commentDialogStyle" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="@android:windowEnterAnimation">@anim/slide_up</item>
        <item name="@android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="list_title_icon_item">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="personal_info_icon_item">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="list_title_text_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/black_0</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="list_title_more_icon_item">
        <item name="android:layout_width">@dimen/more_icon_width</item>
        <item name="android:layout_height">@dimen/more_icon_height</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="detail_page_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="order_page_title" parent="detail_page_title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="order_page_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="align_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingLeft">0dp</item>
        <item name="paddingRight">0dp</item>
        <item name="textSize">@dimen/partion_content_text_size</item>
        <item name="textColor">@color/content_color</item>
        <item name="lineSpacingExtra">@dimen/partion_line_spacing</item>
        <item name="typeface">serif</item>
    </style>

    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_banner_height</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
    <style name="toolbar_back_icon">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/backbutton_icon</item>
    </style>
    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/line</item>
    </style>
    <style name="toolbar_line" parent="divider_line">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="bottom_line" parent="divider_line">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <!--        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
        <item name="android:windowAnimationStyle">@style/AlphaDegreeActivity</item>
        <!--        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>



    <style name="AnimationActivity" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="RotaDegreeActivity" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/rotation_in</item>
        <item name="android:windowExitAnimation">@anim/rotation_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <style name="AlphaDegreeActivity" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="largeRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/large_rating_stars</item>
        <item name="android:minHeight">34dip</item>
        <item name="android:maxHeight">34dip</item>
    </style>

    <style name="smallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/small_rating_stars</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">11dip</item>
    </style>
</resources>