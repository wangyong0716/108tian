<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_divider">
        <item name="android:layout_height">2px</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/divider_title_temp</item>
    </style>

    <style name="pay_divider" parent="title_divider">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="pay_divider_no_margin_bottom" parent="pay_divider">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- 各个item的value -->
    <style name="order_value">
        <item name="android:textColor">@color/label_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/partion_content_text_size</item>
    </style>

    <style name="info_order_value" parent="order_value">
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_alignParentRight">false</item>
    </style>

    <style name="more_icon" parent="order_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">@dimen/margin_right_standard</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="amount_label" parent="order_value">
        <item name="android:textColor">@color/main_red</item>
    </style>

    <style name="arrows_mark" parent="order_value">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="payment_title" parent="pay_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="multi_row_label">
        <item name="android:textColor">@color/content_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/partion_content_text_size</item>
    </style>

    <style name="pay_label" parent="multi_row_label">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="order_detail_label">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/personal_info_text_color</item>
    </style>

    <style name="order_detail_value">
        <item name="android:textColor">@color/label_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
    </style>

    <style name="code_list_item_label">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:background">@drawable/bg_cornered_green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="order_value_mid" parent="order_value">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="pay_value" parent="order_value_mid">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="pay_seperator">
        <item name="android:background">#ffc3c3c3</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="default_edit">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:background">@drawable/bg_edit_selector</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <style name="pay_input" parent="default_edit">
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog_custome_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="text_black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_black_mid" parent="text_black">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_black_large" parent="text_black">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="giftcardDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="text_black_big" parent="text_black">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="default_listview">
        <item name="android:dividerHeight">1px</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:footerDividersEnabled">true</item>
    </style>

    <style name="order_container">
        <item name="android:background">#EFEFEF</item>
        <!-- <item name="android:paddingLeft">10.0dp</item> <item name="android:paddingRight">10.0dp</item> -->
        <!-- <item name="android:paddingTop">5.0dp</item> -->
        <!-- <item name="android:paddingBottom">5.0dp</item> -->
        <item name="android:layout_marginTop">5.0dp</item>
    </style>

    <style name="consignee">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">3.0dp</item>
        <item name="android:paddingBottom">3.0dp</item>
    </style>

    <style name="consignee_lab" parent="consignee">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="consignee_value" parent="consignee">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="order_value_small" parent="order_value">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="text_payresult">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_about_meituan">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="green_button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_cornered_green</item>
    </style>

    <style name="ActivityDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="ShareDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
